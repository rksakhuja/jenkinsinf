pipeline {
    agent any
    environment {
        AWS_SECRET_ACCESS_KEY = credentials('AKIA6DQLRDHQDD2J35OQ')
        AWS_ACCESS_KEY_ID = ('AKIA6DQLRDHQDD2J35OQ')

        
    }
    stages {
        
        stage('1 - Checkout') {
            steps {
                echo 'downloading files..'
                git url: 'https://github.com/rksakhuja/jenkinsinf', branch: 'master'
            }
        }
        stage('2 - init/apply') {
            steps {
                sh '''
                echo "my key is: $AWS_SECRET_ACCESS_KEY"
                cd main
                terraform init -input=false
                export aws_access_key=$AWS_ACCESS_KEY_ID
                export aws_secret_key=AWS_SECRET_ACCESS_KEY
                terraform apply
                '''
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}