pipeline {
    agent any
    
    stages {
        
        stage('1 - Checkout') {
            steps {
                echo 'downloading files..'
                git url: 'https://github.com/rksakhuja/jenkinsinf', branch: 'master'
            }
        }
        stage('2 - init/apply') {
            steps {
                sh '''
                cd main
                terraform init -input=false
                terraform apply -input=false
                '''
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}