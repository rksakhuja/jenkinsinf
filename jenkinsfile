pipeline {
    agent any
    environment {
        AWS_ACCESS_KEY_ID     = credentials('AKIA6DQLRDHQDD2J35OQ')
        
    }
    stages {
        
        stage('1 - Checkout') {
            steps {
                echo 'downloading files..'
                git url: 'https://github.com/rksakhuja/jenkinsinf', branch: 'master'
            }
        }
        stage('2 - init/apply') {
            steps {
                sh '''
                cd main
                terraform init -input=false
                export aws_access_key=TF_VAR_access_key
                export aws_secret_key=TF_VAR_secret_key
                terraform apply
                '''
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}