pipeline {
    agent any
    stages {
        
        stage('1 - Checkout') {
            steps {
                echo 'downloading files..'
                git url: 'https://github.com/rksakhuja/jenkinsinf', branch: 'master'
            }
        }
        stage('2 - init/apply') {
            steps {
                sh '''
                cd main
                terraform init -input=false
                export AWS_ACCESS_KEY_ID="anaccesskey"
                export AWS_SECRET_ACCESS_KEY="asecretkey"
                terraform apply
                '''
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}